<h1 align="center">Log In</h1>

<%= form_for(:session, url: login_path) do |f| %>
  <div class="form-group row">
    <div class="control-label col-sm-2">    
      <%= f.label :email %>
    </div>
    <div class="col-sm-10">
      <%= f.email_field :email, class: "form-control", placeholder: "Enter email", autofocus: true %>
    </div>
  </div>
  <div class="form-group row">
    <div class="control-label col-sm-2">
      <%= f.label :password %>
    </div>
    <div class="col-sm-10">
      <%= f.password_field :password, class: "form-control", placeholder: "Enter password", autofocus: true, autocomplete: "off" %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-10">
      <%= f.submit "Log in", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
[ <%= link_to "Cancel and return to all articles", articles_path %> ]