<%= render 'shared/errors', obj: @user %>

<div>
  <div class="col-xs-12">  
    <%= form_for @user do |f| %>
    <div class="form-group row">
      <div class="control-label col-sm-2">    
        <%= f.label :username %>
      </div>
      <div class="col-sm-10">
        <%= f.text_field :username, class: "form-control", placeholder: "Enter username", autofocus: true %>
      </div>
    </div>
    <div class="form-group row">
      <div class="control-label col-sm-2">
        <%= f.label :email %>
      </div>
      <div class="col-sm-10">
        <%= f.email_field :email, class: "form-control", placeholder: "Enter email", autofocus: true %>
      </div>
    </div>
    <div class="form-group row">
      <div class="control-label col-sm-2">
        <%= f.label :password %>
      </div>
      <div class="col-sm-10">
        <%= f.password_field :password, class: "form-control", placeholder: "Enter password", autofocus: true %>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-sm-10">
        <%= f.submit(@user.new_record? ? "Sign Up" : "Update Account", class: 'btn btn-primary') %>
      </div>
    </div>
  <% end %>
      [ <%= link_to "Cancel and return to all articles", articles_path %> ]
  </div>
</div>