<%= render 'shared/errors', obj: @article %>

<div>
  <div class="col-xs-12">  
    <%= form_for @article do |f| %>
    <div class="form-group row">
      <div class="control-label col-sm-2">    
        <%= f.label :title %>
      </div>
      <div class="col-sm-10">
        <%= f.text_field :title, class: "form-control", placeholder: "Title of article", autofocus: true %>
      </div>
    </div>
    <div class="form-group row">
      <div class="control-label col-sm-2">
        <%= f.label :description %>
      </div>
      <div class="col-sm-10">
        <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Description of article", autofocus: true %>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-sm-10">
        <%= f.submit class: 'btn btn-primary' %>
      </div>
    </div>
  <% end %>
      [ <%= link_to "Cancel and return to all articles", articles_path %> ]
  </div>
</div>